{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "allowJs": true,
    "target": "ES6",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "lib": ["ES2019"],
    "strict": true,
    "module": "CommonJS",
    "esModuleInterop": true
  },
  "include": ["./src/"],
  "exclude": ["node_modules"]
}
